<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->

        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="navigationIconColor">@color/navigation_icon_color_night</item>

        <item name="colorSwitchTrackChecked">@color/switch_track_checked_night</item>
        <item name="colorSwitchTrackUnchecked">@color/switch_track_unchecked_night</item>
        <item name="colorSwitchThumbChecked">@color/switch_thumb_checked_night</item>
        <item name="colorSwitchThumbUnchecked">@color/switch_thumb_unchecked_night</item>


    </style>

    <style name="settingsIcon">
        <item name="tint">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/activity_settings_padding_20dp</item>
    </style>

    <style name="search_box_background">
        <item name="android:background">@drawable/search_box_radius_background</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="search_icon_and_text">
        <item name="android:drawableStart">@drawable/little_search_dark</item>
    </style>

</resources>